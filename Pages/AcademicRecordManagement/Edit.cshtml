@page
@model Lab4.Pages.AcademicRecordManagement.EditModel
@using Lab4.DataAccess;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AcademicRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AcademicRecord.CourseCode" />
            <input type="hidden" asp-for="AcademicRecord.StudentId" />            
            <div class="form-group">
                <div class="row" style="margin-bottom:30px">
                    <div class="col-md-1" style="font-weight:bold;">Student</div><br />
                    <div class="col-md-10">@Model.AcademicRecord.Student.GetStudentIdName</div>
                </div>
                <div class="row" style="margin-bottom:30px">
                    <div class="col-md-1" style="font-weight:bold;">Course</div><br />
                    <div class="col-md-10">@Model.AcademicRecord.GetCompleteCourse</div>
                </div>
                <div class="col-md-4">
                    <label asp-for="AcademicRecord.Grade" class="control-label"></label>
                    <input asp-for="AcademicRecord.Grade" class="form-control" />
                    <span asp-validation-for="AcademicRecord.Grade" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
